---
import { Icon } from "astro-icon";

export interface Props {
  iconName: string;
  title: string;
  text: string;
}

const { iconName, title, text } = Astro.props;
---

<div class="flex items-start rounded-xl bg-white p-4 shadow-lg">
  <div
    class="flex h-12 w-12 items-center justify-center rounded-full border border-blue-100 bg-blue-50"
  >
    <Icon name={iconName} />
  </div>

  <div class="ml-4">
    <p class="text-base text-gray-500">{title}</p>
    <h2 class="font-semibold text-center">{text}</h2>
  </div>
</div>
