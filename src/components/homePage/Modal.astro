---
const { onClose } = Astro.props;
---

<div class="fixed inset-0 flex items-center justify-center z-50">
  <div class="absolute inset-0 bg-black opacity-50" onclick={onClose}></div>
  <div class="bg-white rounded-lg p-6 relative max-w-md">
    <button class="absolute top-2 right-2 text-gray-500" onclick={onClose}
      >&times;</button
    >
    <slot />
    {/* The content of the modal will be inserted here */}
  </div>
</div>
