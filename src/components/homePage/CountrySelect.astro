---
import { Icon } from "astro-icon";
import { countriesNames } from "../../data/talksData";
import { getIconByCountry } from "../../libs/icons";
---

<div class="flex w-full justify-center relative p-2 dummyBorder">
  <div class="flex dummyBorder">
    <Icon name="fontisto:world-o" class="w-8" />
    <span class="place-self-center ml-2">Display All</span>
  </div>
  <div class="absolute rounded-xl bg-white shadow-lg top-full dummyBorder">
    <ul>
      {
        countriesNames.map((country) => (
          <li class="flex justify-left">
            <Icon name={getIconByCountry(country)} class="w-12" />
            <span class="place-self-center">{country}</span>
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style>
  .dummyBorder {
    border: 1px solid red;
  }
</style>
