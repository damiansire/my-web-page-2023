---
import { Icon } from "astro-icon";
import { talkStats } from "../../data/generalStats";
import CountrySelect from "./CountrySelect.astro";
---

<div class="flex flex-col items-start rounded-xl bg-white p-4 shadow-lg">
  <div class="flex grow border-b-2 w-full">
    <div class="flex h-12 w-12 items-center justify-center rounded-full">
      <Icon name={talkStats.iconName} />
    </div>
    <div class="ml-4">
      <p class="text-base text-gray-500">{talkStats.title}</p>
      <h2 class="font-semibold text-center">Total: {talkStats.text}</h2>
    </div>
  </div>
  <CountrySelect />
</div>
