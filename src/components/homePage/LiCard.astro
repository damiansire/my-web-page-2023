---
export interface Props {
  number: string;
  title: string;
  text: string;
}

const { number, title, text } = Astro.props;
---

<li class="flex justify-left border-gray-200 rounded-xl bg-gray-50 p-4">
  <div class="px-4 text-5xl font-extralight text-red-700">{number}</div>
  <div class="w-full">
    <div class="text-xl font-bold text-red-800">{title}</div>
    <p class="py-2 text-sm text-red-900">
      {text}
    </p>
  </div>
</li>

