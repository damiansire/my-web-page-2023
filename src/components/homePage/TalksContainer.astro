---
import { talksData } from "../../data/talksData";
import TalkLine from "./TalkLine.astro";
import TalksStats from "./TalksStats.astro";
---

<div class="h-full flex flex-col">
  <TalksStats />
  <div class="talk-container overflow-y-scroll h-full">
    {
      talksData.map((talkData) => (
        <div class="p-1" data-country={talkData.country}>
          <TalkLine talkData={talkData} />
        </div>
      ))
    }
  </div>
</div>
