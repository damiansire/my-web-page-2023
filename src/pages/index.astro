import RedesNotificationContainer from "../components/homePage/RedesNotificationContainer.astro";
import TimeLine from "../components/homePage/TimeLine.astro";
import TimeLineItem from "../components/homePage/TimeLineItem.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Damian Sire" styles="overflow-hidden">
  <div>
    <CommunityCarrousel />
    <div class="flex flex-col md:flex-row gap-3 p-4">
      <div class="md:w-7/12 md:flex-grow text-center">
        <TimeLineItem
          description="Chosen as a Developer Expert by Google"
          imgSrc="badgeExpert.svg"
        />
      </div>
      <div class="md:w-5/12 flex flex-col gap-3">
        <!-- <NotificationDisplay text="Hello! While you're here, let's talk ðŸ”¥" /> -->
        <RedesNotificationContainer />
